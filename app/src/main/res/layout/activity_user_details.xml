<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_details_cv_user_avatar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_user_details_iv_user_avatar"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            app:srcCompat="@drawable/user_profile_image_dummy" />

        <TextView
            android:id="@+id/activity_user_details_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="John Doe"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_user_details_tv_organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="User's Organization"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Button
            android:id="@+id/activity_user_details_btn_share_profile"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:padding="16dp"
            android:text="Share Profile"
            android:theme="@style/AppTheme.BlueAccent" />

    </LinearLayout>


</android.support.v7.widget.CardView>