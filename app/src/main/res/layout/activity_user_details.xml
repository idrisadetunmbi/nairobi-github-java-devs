<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/activity_user_details_cv_user_avatar"
        android:layout_marginTop="36dp"
        app:contentPadding="5dp"
        >

        <ImageView
            android:id="@+id/activity_user_details_iv_user_avatar"
            android:layout_width="186dp"
            android:layout_height="178dp"
            app:srcCompat="@drawable/user_profile_image_dummy" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/activity_user_details_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="John Doe"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_user_details_cv_user_avatar" />
        app:layout_constraintTop_toBottomOf="@+id/activity_user_details_iv_user_avatar" />

    <TextView
        android:id="@+id/activity_user_details_tv_organization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="User's Organization"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_user_details_tv_username" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:theme="@style/AppTheme.BlueAccent"
        android:id="@+id/activity_user_details_btn_share_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Share Profile"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_user_details_tv_organization" />

</android.support.constraint.ConstraintLayout>